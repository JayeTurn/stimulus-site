{
  "private": true,
  "dependencies": {
    "@hotwired/turbo": "7.0.0-beta.3",
    "stimulus": "2.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "del-cli": "^3.0.1",
    "esbuild": "^0.8.32",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  },
  "scripts": {
    "serve": "npm-run-all -s clean build:js -p watch:** --silent",
    "publish:stage": "ELEVENTY_ENV=stage run-s build:**",
    "publish:prod": "ELEVENTY_ENV=prod run-s build:**",
    "clean": "del-cli \"_public/**\"",
    "build:11ty": "npx eleventy",
    "watch:11ty": "npx eleventy --serve --incremental --quiet",
    "build:css": "node-sass --output-style compressed _source/_assets/css/main.scss _public/assets/main.css",
    "watch:css": "npm run build:css -- --watch",
    "build:js": "esbuild _source/_assets/js/index.js --bundle --minify --sourcemap --outdir=_public/assets",
    "watch:js": "onchange \"_source/_assets/js/**/*.js\" -- npm run build:js"
  }
}
